{
  "name": "mars",
  "version": "0.0.1",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-jest": "^26.1.0",
    "jest": "^26.1.0"
  },
  "scripts": {
    "test": "jest",
    "tsc": "tsc"
  },
  "dependencies": {
    "typescript": "^3.9.6"
  },
  "type": "module",
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "src/frontend",
      "src/shared"
    ]
  },
  "env": {
    "production": {
      "plugins": [
        "transform-es2015-modules-commonjs"
      ]
    }
  }
}
